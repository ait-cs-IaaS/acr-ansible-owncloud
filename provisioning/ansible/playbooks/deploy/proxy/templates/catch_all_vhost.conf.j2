NameVirtualHost *:80
NameVirtualHost *:443

<VirtualHost *:80>
{% if item.server_name is defined %}
	ServerName {{ item.name }}
	ServerAlias localhost
{% else %}
	ServerName localhost
{% endif %}

	ErrorLog ${APACHE_LOG_DIR}/proxy-error.log
	CustomLog ${APACHE_LOG_DIR}/proxy-access.log "%v %h %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\""

	# don't allow access via unkown hostname or ip
	<Location />
		Require all denied
	</Location>
</VirtualHost>

<VirtualHost *:443>
{% if item.server_name is defined %}
	ServerName {{ item.name }}
	ServerAlias localhost
{% else %}
	ServerName localhost
{% endif %}
	
	SSLEngine on
	SSLCertificateFile  {{ apache2_ssl_cert_path }}/{{ item.cert | default(ssl_cert) | basename }}
	SSLCertificateKeyFile {{ apache2_ssl_key_path }}/{{ item.key | default(ssl_key) | basename }}
{% if item.certchain is defined %}
	SSLCertificateChainFile {{ apache2_ssl_cert_path }}/{{ item.certchain }}
{% endif %}
	ErrorLog ${APACHE_LOG_DIR}/proxy-error.log
	CustomLog ${APACHE_LOG_DIR}/proxy-access.log "%v %h %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\""

	# don't allow access via unkown hostname or ip
	<Location />
		Require all denied
	</Location>

</VirtualHost>
