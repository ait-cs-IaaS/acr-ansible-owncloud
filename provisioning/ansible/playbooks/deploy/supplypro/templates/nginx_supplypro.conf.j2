upstream app_server {
  server unix:{{ supplypro_socket_path }};
}

server {
  listen 80;
  server_name {{ supplypro_server_name }};

  location / {
    return 301 https://$host$request_uri;
  }
}

# backend
server {
  listen  5000 ssl;
  ssl_certificate     {{ ssl_cert }};
  ssl_certificate_key {{ ssl_key }};

  proxy_read_timeout 24h;
  proxy_set_header Connection '';
  proxy_http_version 1.1;
  chunked_transfer_encoding off;
  proxy_buffering off;
  proxy_cache off;

  server_name {{ supplypro_server_name }};
  root        {{ supplypro_wwwroot }};

  location / {
    proxy_pass http://app_server;
    include proxy_params;
  }

}

# frontend
server {
  listen 443 ssl default_server;
  ssl_certificate     {{ ssl_cert }};
  ssl_certificate_key {{ ssl_key }};

  server_name supplypro;
  root        /var/www/html/supplypro;
  index   index.html;

  location / {
        root /var/www/html/supplypro;
        try_files $uri  /index.html;
  }
  error_log  /var/log/nginx/supplypro-frontend-error.log;
  access_log /var/log/nginx/supplypro-frontend-access.log;

}
